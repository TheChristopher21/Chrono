{
  "name": "chrono-frontend",
  "version": "1.0.0",
  "description": "Chrono Zeiterfassung",
  "author": "Chris <Siefert.sc@gmail.com>",
  "homepage": "https://github.com/TheChristopher21/Chrono",
  "private": true,
  "type": "module",
  "main": "src/electron-main.js",
  "scripts": {
    "dev": "vite --config vite.config.js",
    "build": "vite build",
    "build:prod": "vite build --config vite.config.prod.js",
    "serve": "vite preview",
    "electron": "electron .",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "test": "vitest run",
    "test:watch": "vitest",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:codegen": "playwright codegen http://localhost:5173"
  },
  "dependencies": {
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.3.0",
    "@tanstack/react-query": "^5.83.0",
    "@testing-library/user-event": "^14.6.1",
    "axios": "1.8.2",
    "chart.js": "^4.4.7",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "howler": "^2.2.4",
    "html2canvas": "^1.4.1",
    "js-file-download": "^0.4.12",
    "jspdf": "3.0.1",
    "jspdf-autotable": "^5.0.2",
    "jwt-decode": "^2.2.0",
    "nfc-pcsc": "^0.8.1",
    "pcsclite": "^1.0.1",
    "prop-types": "^15.8.1",
    "react": "^19.1.0",
    "react-calendar": "^5.1.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "react-i18next": "^15.5.2",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.1.3",
    "rollup": "4.22.4",
    "three": "^0.180.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.7",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "cypress": "^14.1.0",
    "electron": "31.1.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "playwright": "^1.55.0",
    "vite": "^6.3.5",
    "vitest": "^3.0.8"
  },
  "build": {
    "appId": "com.deinunternehmen.chrono",
    "productName": "Chrono",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/electron-main.js",
      "backend/Chrono-0.0.1-SNAPSHOT.jar"
    ],
    "extraResources": [
      {
        "from": "src/preload.js",
        "to": "preload.js"
      },
      {
        "from": "backend/Chrono-0.0.1-SNAPSHOT.jar",
        "to": "backend/Chrono-0.0.1-SNAPSHOT.jar"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "chris@example.com"
    }
  },
  "keywords": [],
  "license": "ISC"
}
