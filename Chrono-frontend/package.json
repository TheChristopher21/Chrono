{
  "name": "chrono-frontend",
  "version": "1.0.0",
  "description": "Chrono Zeiterfassung",
  "author": "Chris <Siefert.sc@gmail.com>",
  "homepage": "https://github.com/TheChristopher21/Chrono",
  "private": true,
  "type": "module",
  "main": "src/electron-main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "jwt-decode": "^2.2.0",
    "nfc-pcsc": "^0.8.1",
    "pcsclite": "^1.0.1",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-calendar": "^5.1.0",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "31.1.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "vite": "^6.0.5"
  },
  "build": {
    "appId": "com.deinunternehmen.chrono",
    "productName": "Chrono",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "src/electron-main.js",
      "src/preload.js"
    ],
    "extraResources": [
      {
        "from": "backend/Chrono-0.0.1-SNAPSHOT.jar",
        "to": "backend/Chrono-0.0.1-SNAPSHOT.jar"
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "chris@example.com"
    },
    "win": {
      "target": "nsis"
    }
  }
}
